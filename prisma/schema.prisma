// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String   @id @default(cuid())
  walletAddress String   @unique
  balance       Float    @default(100.0) // Start with 100 fake credits
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  bots          Bot[]
  bets          Bet[]
}

model Bot {
  id          String   @id @default(cuid())
  name        String
  description String?
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  prompt      String   // The system prompt or instruction
  strategy    String?  // 'aggressive', 'balanced', etc.
  wins        Int      @default(0)
  losses      Int      @default(0)
  matchesAsA  Match[]  @relation("BotA")
  matchesAsB  Match[]  @relation("BotB")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Match {
  id           String   @id @default(cuid())
  botAId       String
  botBId       String
  botA         Bot      @relation("BotA", fields: [botAId], references: [id])
  botB         Bot      @relation("BotB", fields: [botBId], references: [id])
  gameType     String   @default("RPS") // 'RPS', 'COIN_FLIP'
  winnerId     String?  // Null if draw or not finished
  status       String   @default("SCHEDULED") // SCHEDULED, LIVE, FINISHED
  scheduledFor DateTime
  resultData   String?  // JSON string of moves/logs
  bets         Bet[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Bet {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id])
  amount    Float
  prediction String  // 'BotA', 'BotB' (or ID of winner)
  status    String   @default("PENDING") // PENDING, WON, LOST, REFUNDED
  payout    Float?   // Null until settled
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
